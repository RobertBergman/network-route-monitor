# Snapshot root (default ./route_snaps)
SNAPDIR=./route_snaps

# Polling & exporter
POLL_INTERVAL_SEC=60
PROM_PORT=9108

# Device credentials (read-only)
NETOPS_USER=netops
NETOPS_PASS=changeme

# NetBox (optional inventory)
USE_NETBOX=false
NB_URL=https://netbox.example.com
NB_TOKEN=xxxxxxx

# --- NX-OS / NX-API options ---
# When true, use NX-API JSON for NX-OS devices (faster, stable)
USE_NXAPI=false
# If empty, defaults to https on port 443 to https://<host>/ins
NXAPI_SCHEME=https
NXAPI_PORT=443
# Optional: disable TLS verify for lab gear (not recommended in prod)
NXAPI_VERIFY=false

# Static inventory fallback (see poller.py for host list)

# Database configuration (PostgreSQL) - Optional
# Note: When using Docker, use 'postgres' as host internally, 'localhost:15432' externally
DATABASE_URL=postgresql://routemonitor:changeme@postgres:5432/routemonitor
# Or use individual settings:
DB_HOST=postgres
DB_PORT=5432
DB_NAME=routemonitor
DB_USER=routemonitor
DB_PASSWORD=changeme

# API Server
API_PORT=5000

# Monitoring Stack (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=changeme

# Docker Registry Settings (for manual pulls)
REGISTRY=ghcr.io
REPO=robertbergman/network-route-monitor